
<link href="http://localhost:8000/css/bootstrap.min.css" rel="stylesheet">
<link href="http://localhost:8000/css/blog-post.css" rel="stylesheet">

<!-- Page Content -->
<div class="">
    <div class="row">
        <div class="col-lg-8">
            <h1>{{post.title}}</h1>
            <p class="lead">
                by <a href="#">{{user.username}}</a>
            </p>
            <hr>
            <p><span class="glyphicon glyphicon-time"></span> Posted on {{post.dateCreated}}</p>
            <hr>
            <hr>
            {{#each post.tags}}
                <span class="lead" style="background-color:#cdf2f1;color: black;display: inline;font-weight: bold;">#{{this}}</span>
                <span>&nbsp;</span>
            {{/each}}
            <hr>
            <p>{{post.description}}</p>
            <div class="">
                <form method="post" action="/posts/postsComment">
                    <input type="hidden" value={{post._id}} name='getPost'/>
                    <span class="expandonClick1">
                        <textarea type="text" name="search" placeholder="Leave a Comment.."></textarea>
                    </span>
                    <button type="submit" class="btn btn-primary" style="margin-bottom: 4.5em;">Comment</button>
                </form>
            </div>
            <hr>
        </div>

        <div class="col-md-4">
            <div class="well">
                <h4>Topic Search:</h4>
                <div class="input-group">
                    <span class="expandonClick">
                        <input type="text" name="search" placeholder="Search..">
                        {{#if reg_user}}
                            <a onclick="document.getElementById('id03').style.display='block'" style="width:auto;"> Post Question ?</a>
                        {{/if}}
                    </span>
                </div>
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <h4>Stats:</h4>
                <span style="color:greenyellow;">Up votes : {{post.upvotes}}</span>
                <br/>
                <span style="color:lightcoral;">Down votes : {{post.downvotes}}</span>
                <br/>
                <span style="color:cornflowerblue;">Views : {{post.preview}}</span>
            </div>
        </div>
    </div>
</div>
<div id="dispPosts1">
    <div class="">
    {{#each comments}}
        <div class="clickable-row title-row" onclick="getCommentOfComment('{{_id}}',this);">
             <span><img class="media-object profile-pic" src="http://localhost:8000/uploads/{{user.filename}}" alt="profile pic"></span>
             <span>
                 <div class="media-body">
                    <h4 class="media-heading">{{user.username}}
                        <small>{{lastModified}}</small>
                    </h4>
                    {{text}}
                </div>
             </span>
        </div>
    {{/each}}
    </div>
</div>

<script src="http://localhost:8000/javascript/jquery.js"></script>
<script src="http://localhost:8000/javascript/bootstrap.min.js"></script>