<div class="col-sm-2 sidenav_left show_only_main">
    <div class="positionFixed">
        <div>
            <span class="makeBold">Top Feed</span>
            <ul class="nav">
                {{#each top_tags}}
                <li>
                    <a class="page-scroll" onclick="getPostsByTags('{{text}}')">{{text}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div style="margin-top:2em;">
            <span class="makeBold">Suggestions</span>
            <ul class="nav">
                <li>
                    <a class="page-scroll" onclick="getPostsByTags()"><span class="selectedFeed">Latest</span></a>
                </li>
                <li>
                    <a class="page-scroll" href="#">University of Texas at Dallas</a>
                </li>
                <li>
                    <a class="page-scroll" href="#">Google</a>
                </li>
                <li>
                    <a class="page-scroll" href="#">Facebook</a>
                </li>
                <li>
                    <a class="page-scroll" href="#">Microsoft</a>
                </li>
            </ul>
        </div>

        <div style="margin-top:2em;">
            <a class="page-scroll" onclick="getPostsByTags()"><span class="makeBold">New Questions</span></a>
        </div>

        <div style="margin-top:2em;">
            <a class="page-scroll" onclick="getPostsWithoutComments()"><span class="makeBold">Unanswered Questions</span></a>
        </div>

        <div style="margin-top:2em;">
            <a class="page-scroll" onclick="getPostsWithMostComments()"><span class="makeBold">Most answered Questions</span></a>
        </div>

        {{#if user}}
            <div style="margin-top:2em;">
                <a class="page-scroll" href="#"><span class="makeBold">Favourites</span></a>
            </div>
            <div style="margin-top:2em;">
                <a class="page-scroll" href="#"><span class="makeBold">My Questions</span></a>
            </div>
        {{/if}}
    </div>
</div>