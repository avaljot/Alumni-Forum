<span class="expandonClick">
    <input type="text" name="search" placeholder="Search.." id="searchBox">
    {{#if reg_user}}
        <a href="#" data-toggle="modal" data-target="#thread-modal">Create new Thread</a>
    {{/if}}
</span>
<p class="lead" style="margin-top: 2%">Alumni Discussion Forum</p>

<table class="table forum table-striped" id="middleTable">
    <thead>
    <tr>
        <th class="cell-stat"></th>
        <th>
            <h3>Threads</h3>
        </th>
        <th class="cell-stat text-center hidden-xs hidden-sm">Tags</th>
        <th class="cell-stat text-center hidden-xs hidden-sm">Posts</th>
        <th class="cell-stat-2x hidden-xs hidden-sm">Last Post</th>
    </tr>
    </thead>
    <tbody>
    {{#each posts}}
        <tr>
            <td class="text-center"><i class="fa fa-question fa-2x text-primary"></i></td>
            <td>
                <h4><a href="/posts/getPost/{{_id}}">{{title}}</a><br>
                    <small>Upvotes : {{upvotes}},Downvotes : {{downvotes}},Views : {{preview}}</small>
                </h4>
            </td>
            <td class="text-center hidden-xs hidden-sm">
                {{#each tags}}
                    #{{this.text}}
                    <span>&nbsp;</span>
                {{/each}}
            </td>
            {{#if comments}}
                <td class="text-center hidden-xs hidden-sm">{{comments.length}}</td>
            {{else}}
                <td class="text-center hidden-xs hidden-sm">Be the first one to comment!</td>
            {{/if}}
            <td class="hidden-xs hidden-sm">{{dateFormat lastModified "MMMM Do YYYY, h:mm a"}}</a><br>
                <small><i class="fa fa-clock-o"></i></small>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
